<%= render "shares/header" %>
<h2>Log in</h2>

<%= form_with model:@user, url:  user_session_path, class: '' ,local: true do |f| %>
  <%#エラー文を出すための仕掛け#%>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"user-form", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class:"user-form", id:"password", placeholder:"6文字以上の半角英数字"  %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class:"login-user-btn" %>
  </div>
<% end %>

