<%= render "shares/header" %>
<div class = "whole">
<h2>新規登録</h2>

<%= form_with(model:@user, url: user_registration_path, local: true) do |f| %>
  <%# エラー文出すためのrender  #%>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_area :nickname, autofocus: true, class:"user-form" , id:"nickname", placeholder:"例) 山田 太郎", maxlength:"30" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "user-form" , id:"email", placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "user-form", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "user-form", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="field">
  <label class="form-text">birthday</label><br />
    <%= raw sprintf(
                 f.date_select(
                   :birthday,
                   class:"birth-category",
                   id:"birth-date",
                   prompt:"--",
                   use_month_numbers:true,
                   start_year:(Time.now.year - 10),
                   end_year:1954,
                   date_separator:'%s'),
                  '年','月')+'日' %>
  </div>

  <div class="register-btn">
    <%= f.submit "新規登録", class:"register-user-btn" %>
  </div>
<% end %>
</div>